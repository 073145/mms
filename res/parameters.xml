<?xml version="1.0" encoding="utf-8"?>

<!-- Graphical Parameters -->
<pixels-per-meter>250</pixels-per-meter>
<frame-rate>60</frame-rate>
<tile-base-color>BLACK</tile-base-color>
<tile-wall-color>RED</tile-wall-color>
<tile-corner-color>GRAY</tile-corner-color>
<mouse-body-color>BLUE</mouse-body-color>
<mouse-wheel-color>GREEN</mouse-wheel-color>
<mouse-sensor-color>WHITE</mouse-sensor-color>

<!-- Simulation Parameters -->
<random-seed>12345</random-seed> <!-- The seed value for rand() -->
<use-random-seed>false</use-random-seed> <!-- Whether or not to use the seed value -->
<glut-init-time>0.25</glut-init-time> <!-- Seconds -->
<delta-time>0.01</delta-time> <!-- Seconds -->
<min-sim-speed>0.1</min-sim-speed> <!-- Fraction of real-time -->
<max-sim-speed>10.0</max-sim-speed> <!-- Fraction of real-time -->
<default-sim-speed>1.0</default-sim-speed> <!-- Fraction of real-time -->
<number-of-circle-approximation-points>8</number-of-circle-approximation-points> <!-- The number of edges in a polygon for a circle -->
<number-of-sensor-edge-points>10</number-of-sensor-edge-points> <!-- The number of points of the edge of a sensor-->
<!-- TODO: I don't think we're going to be able to have sim speed... -->

<!-- Maze Parameters -->
<maze-directory>res/mazes/</maze-directory> <!-- realtive to project root -->
<maze-file>ieee2011.maz</maze-file> <!-- relative to maze-directory -->
<use-maze-file>true</use-maze-file> <!-- whether or not to use the maze file above -->
<wall-length>.156</wall-length> <!-- meters -->
<wall-width>.012</wall-width> <!-- meters -->
<wall-height>.05</wall-height> <!-- meters -->
<!-- TODO: Rename "random-maze-..." to "generated-maze..." -->
<random-maze-width>16</random-maze-width> <!-- number of tiles -->
<random-maze-height>16</random-maze-height> <!-- number of tiles -->
<enforce-official-maze-rules>false</enforce-official-maze-rules>
<random-maze-algo>TOMASZ</random-maze-algo>
<save-random-maze>true</save-random-maze> <!-- Whethor or not to save a random maze -->

<!-- Mouse Parameters -->
<mouse-file>mouse.mse</mouse-file> <!-- TODO -->

